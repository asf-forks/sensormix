<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:jaxws="http://cxf.apache.org/jaxws" xmlns:cxf="http://camel.apache.org/schema/cxf"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://cxf.apache.org/jaxws 
       http://cxf.apache.org/schemas/jaxws.xsd
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/osgi  
       http://www.springframework.org/schema/osgi/spring-osgi.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd
       http://camel.apache.org/schema/cxf
	   http://camel.apache.org/schema/cxf/camel-cxf.xsd
	   http://www.springframework.org/schema/util 
	   http://www.springframework.org/schema/util/spring-util-2.5.xsd
	   http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-2.5.xsd">


	<bean id="mockService"
		class="com.google.developers.gdgfirenze.integration.SensormixServiceMock" />

	<!-- Routes -->
	<camelContext id="prailEventBrokerIntCamelContext" xmlns="http://camel.apache.org/schema/spring">

		<!-- refer to a given route to be used -->
		<routeContextRef ref="jsonHttpProcessingRoutes" />
		<routeContextRef ref="jsonProcessingRoutes" />
		<routeContextRef ref="xmlAdapterRoutes" />

		<dataFormats>
			<xmljson id="xmljson" elementName="item" arrayName="list"
				rootName="root" />
		</dataFormats>

		<route id="sensorMixHttpEntryRoute">
			<from uri="jetty:http://0.0.0.0:8080/sampleEndpoint" />
			<to uri="direct:jsonHttpEntry" />
		</route>

		<route id="sensorMixUdpEntryRoute">
			<from uri="mina2:udp://0.0.0.0:8888" />
			<to uri="seda:jsonEntry?waitForTaskToComplete=Never" />
		</route>

		<route id="sensorMixToDataManagerRoute">
			<from uri="seda:normalizedSample" />
			<!-- TODO: write route to send input to the data service, with bean invocation -->
			<to uri="log:sample_to_data_service?showAll=true" />
		</route>
	</camelContext>
</beans>
